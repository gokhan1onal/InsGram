<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Default"/>

    <!-- colors. -->
    <color name="primaryColor">#405DE6</color>
    <color name="primaryTextColor">@color/white</color>
    <color name="tabSelectedColor">@color/white</color>
    <color name="toolbarTitleColor">@color/white</color>
    <color name="tabUnSelectedColor">@color/black</color>

    <style name="Default.InsGram" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Default.Toolbar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Default.PopupMenuStyle"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/white</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/white</item>
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>


    <style name="Default.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/primaryColor</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tint">@color/custom_tab_icons</item>
    </style>

    <style name="Default.Title" parent="Widget.MaterialComponents.TextView" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Default.TextInputLayout">
        <item name="colorPrimary">@color/primaryColor</item> // Activated State
        <item name="colorOnSurface">@color/primaryColor</item> // Normal State

        <item name="android:colorControlActivated">@color/primaryColor</item> // Normal State
        <item name="android:colorControlNormal">@color/primaryColor</item> // Normal State
        <item name="android:colorControlHighlight">@color/primaryColor</item> // Normal State

    </style>

</resources>