<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.HomeFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiDownloadUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Default.TextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDownloadUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="İndirmek istediğiniz bağlantıyı yapıştırın." />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İndir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tiDownloadUrl" />

</androidx.constraintlayout.widget.ConstraintLayout>